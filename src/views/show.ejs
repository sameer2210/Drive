<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Uploaded Posts</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 flex flex-col items-center p-6">
    <h1 class="text-4xl font-bold text-gray-800 mb-6">Your Uploaded Posts</h1>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 w-full max-w-4xl"
    >
      <% allPost.forEach(element => { %>
      <div class="bg-white shadow-lg rounded-lg p-4 flex flex-col items-center">
        <img
          class="w-full h-40 object-cover rounded-md"
          src="<%= element.postImage %>"
          alt="Network error"
        />
        <a
          href="<%= element.postImage %>"
          download
          class="mt-4 px-4 py-2 bg-gradient-to-r from-red-500 to-red-300 text-white rounded-md hover:bg-red-600 transition"
          >Download</a
        >
      </div>
      <% }); %>
    </div>
  </body>
</html>
